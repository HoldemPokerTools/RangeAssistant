{
  "author": "Hold'em Poker Tools",
  "browserslist": {
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ],
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ]
  },
  "build": {
    "appId": "com.holdempokertools.rangeassistant",
    "productName": "Range Assistant",
    "artifactName": "${productName}.${ext}",
    "copyright": "Copyright Â© 2020 Hold'em Poker Tools",
    "afterSign": "scripts/notarize.js",
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "mac": {
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "gatekeeperAssess": false,
      "hardenedRuntime": true,
      "category": "public.app-category.utilities",
      "icon": "./icons/mac/icon.icns",
      "type": "distribution",
      "target": [
        "dmg"
      ]
    },
    "dmg": {
      "icon": "./icons/mac/icon.icns",
      "sign": false
    },
    "win": {
      "target": "nsis",
      "icon": "./icons/win/icon.ico"
    },
    "fileAssociations": [
      {
        "ext": "range",
        "name": "Range File",
        "role": "Editor"
      }
    ]
  },
  "dependencies": {
    "@holdem-poker-tools/hand-matrix": "^0.2.3",
    "ajv": "^7.0.3",
    "antd": "^4.10.0",
    "electron-is-dev": "^1.2.0",
    "electron-updater": "^4.3.5",
    "pouchdb": "^7.2.2",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-dropzone": "^11.2.4",
    "react-scripts": "4.0.1"
  },
  "description": "Hold'em Poker Tools Range Assistant desktop app",
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.8",
    "@testing-library/react": "^11.2.2",
    "@testing-library/user-event": "^12.6.0",
    "concurrently": "^5.2.0",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "electron": "11.1.1",
    "electron-builder": "^22.9.1",
    "electron-notarize": "^1.0.0",
    "electron-reload": "^1.5.0",
    "source-map-explorer": "^2.5.2",
    "wait-on": "^5.2.1"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "homepage": "./",
  "license": "MIT",
  "main": "public/electron.js",
  "name": "@holdem-poker-tools/range-assistant-desktop",
  "repository": "https://github.com/HoldemPokerTools/RangeAssistant",
  "private": true,
  "productName": "Range Assistant",
  "scripts": {
    "analyze": "source-map-explorer 'build/static/js/*.js'",
    "build": "yarn react-build && yarn electron-build",
    "eject": "react-scripts eject",
    "electron-build": "electron-builder --win --mac",
    "electron-start": "electron .",
    "postinstall": "electron-builder install-app-deps",
    "react-build": "react-scripts build",
    "react-start": "cross-env BROWSER=none react-scripts start",
    "start": "concurrently --kill-others \"yarn react-start\" \"wait-on http://localhost:3000 && yarn electron-start\"",
    "test": "react-scripts test --env=jsdom"
  },
  "version": "0.3.1"
}
